#!/bin/sh -ex

DB_NAME=cakephp
DB_USER=cakephp
DB_PASS=$(mcookie)

SRC=/usr/local/src
WEBROOT=/var/www/cakephp

# unpack and set permissions
unzip $SRC/cakephp-*.zip -d $(dirname $WEBROOT)
mv $(dirname $WEBROOT)/cakephp-* $WEBROOT
rm $SRC/cakephp-*.zip
chown -R root:root $WEBROOT
chown -R www-data:www-data $WEBROOT/app/tmp

